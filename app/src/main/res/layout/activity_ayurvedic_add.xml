<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent_80"
    tools:context=".main.dashotheractivity.herbalremedies.ayurvedic.AyurvedicAdd">

    <RelativeLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/tv_add"
            android:layout_toRightOf="@+id/iv_back"
            android:text="@string/ayurvedic_treatment"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/green_button"
            android:backgroundTint="@color/white"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/add"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:text="@string/village_namee"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black_transparent_80"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_30sdp"
                        android:gravity="center"
                        android:id="@+id/spin_village_name"/>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="@string/date"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:textColor="@color/black_transparent_80"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/edit_box"
                        android:backgroundTint="@color/white"
                        android:id="@+id/tv_date"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:minWidth="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:id="@+id/spin_month"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/edit_box"
                        android:layout_margin="@dimen/_5sdp"
                        />






                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/black_transparent_80"
                    android:layout_marginTop="@dimen/_10sdp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="@dimen/_5sdp">
                       <TextView
                           android:id="@+id/form_title"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_margin="@dimen/_5sdp"
                           android:text="@string/no_of_pat"
                           android:textStyle="bold"
                           android:textColor="@color/white"
                           android:textSize="@dimen/_12sdp"
                           android:layout_gravity="left"/>
                       <LinearLayout
                           android:id="@+id/llFamilyVisit"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:weightSum="2"
                           android:visibility="gone"
                           android:layout_margin="@dimen/_5sdp">

                           <Spinner
                               android:layout_width="match_parent"
                               android:minWidth="@dimen/_30sdp"
                               android:layout_height="wrap_content"
                               android:minHeight="@dimen/_30sdp"
                               android:layout_gravity="center"
                               android:layout_marginLeft="@dimen/_30sdp"
                               android:id="@+id/spin_head_name"
                               android:gravity="center"
                               android:textStyle="bold"
                               android:background="@drawable/edit_box"
                               android:layout_margin="@dimen/_5sdp"
                               />
                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:minHeight="@dimen/_30sdp"
                               android:layout_gravity="right"
                               android:layout_weight="1"
                               android:gravity="center|left"
                               android:maxLines="2"
                               android:hint="@string/subj"
                               android:layout_marginLeft="@dimen/_5sdp"
                               android:layout_marginRight="@dimen/_5sdp"
                               android:padding="@dimen/_5sdp"
                               android:background="@drawable/edit_box"
                               android:id="@+id/et_subj"/>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal"
                               android:weightSum="2"
                               android:visibility="gone"
                               android:layout_margin="@dimen/_5sdp">

                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="@dimen/_5sdp"
                                   android:text="@string/family_visit"
                                   android:textStyle="bold"
                                   android:layout_weight="1"
                                   android:textSize="@dimen/_12sdp"
                                   android:layout_gravity="center"/>
                               <EditText
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:minHeight="@dimen/_30sdp"
                                   android:layout_gravity="right"
                                   android:layout_weight="1"
                                   android:gravity="center"
                                   android:inputType="number"
                                   android:maxLength="3"
                                   android:layout_marginLeft="@dimen/_5sdp"
                                   android:layout_marginRight="@dimen/_5sdp"
                                   android:padding="@dimen/_5sdp"
                                   android:background="@drawable/edit_box"
                                   android:id="@+id/et_no_of_family_visit"/>

                           </LinearLayout>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:weightSum="2"
                           android:layout_margin="@dimen/_5sdp">

                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/_5sdp"
                               android:text="@string/male"
                               android:textStyle="bold"
                               android:layout_weight="1"
                               android:textSize="@dimen/_12sdp"
                               android:layout_gravity="center"/>
                          <EditText
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:minHeight="@dimen/_30sdp"
                              android:layout_gravity="right"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:inputType="number"
                              android:maxLength="3"
                              android:layout_marginLeft="@dimen/_5sdp"
                              android:layout_marginRight="@dimen/_5sdp"
                              android:padding="@dimen/_5sdp"
                              android:background="@drawable/edit_box"
                              android:id="@+id/et_no_of_male"/>

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:weightSum="2"
                           android:layout_margin="@dimen/_5sdp">

                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/_5sdp"
                               android:text="@string/female"
                               android:textStyle="bold"
                               android:layout_weight="1"
                               android:textSize="@dimen/_12sdp"
                               android:layout_gravity="center"/>
                          <EditText
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:minHeight="@dimen/_30sdp"
                              android:layout_gravity="right"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:inputType="number"
                              android:maxLength="3"
                              android:padding="@dimen/_5sdp"
                              android:layout_marginLeft="@dimen/_5sdp"
                              android:layout_marginRight="@dimen/_5sdp"
                              android:background="@drawable/edit_box"
                              android:id="@+id/et_no_of_female"/>

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:weightSum="2"
                           android:layout_margin="@dimen/_5sdp">

                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/_5sdp"
                               android:text="@string/children"
                               android:textStyle="bold"
                               android:layout_weight="1"
                               android:textSize="@dimen/_12sdp"
                               android:layout_gravity="center"/>
                          <EditText
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:minHeight="@dimen/_30sdp"
                              android:layout_gravity="right"
                              android:layout_weight="1"
                              android:inputType="number"
                              android:maxLength="3"
                              android:gravity="center"
                              android:layout_marginLeft="@dimen/_5sdp"
                              android:layout_marginRight="@dimen/_5sdp"
                              android:padding="@dimen/_5sdp"
                              android:background="@drawable/edit_box"
                              android:backgroundTint="@color/orange_box"
                              android:id="@+id/et_no_of_children"/>

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:weightSum="2"
                           android:padding="@dimen/_5sdp"
                           android:background="@drawable/edit_box"
                           android:backgroundTint="@color/orange_box"
                           android:layout_margin="@dimen/_5sdp">

                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/_5sdp"
                               android:text="@string/total"
                               android:textStyle="bold"
                               android:layout_weight="1"
                               android:textSize="@dimen/_15sdp"
                               android:textColor="@color/black_transparent_80"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:minHeight="@dimen/_30sdp"
                               android:layout_gravity="right"
                               android:text=""
                               android:textStyle="bold"
                               android:layout_weight="1"
                               android:textSize="@dimen/_15sdp"
                               android:textColor="@color/black_transparent_80"
                               android:gravity="center"
                               android:layout_marginLeft="@dimen/_5sdp"
                               android:layout_marginRight="@dimen/_5sdp"
                               android:padding="@dimen/_5sdp"
                               android:background="@drawable/edit_box"
                               android:backgroundTint="@color/orange_box"
                               android:id="@+id/tv_total_patient"/>


                       </LinearLayout>

                   </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTotalCured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/black_transparent_80"
                    android:layout_marginTop="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/treatment_type"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:visibility="gone"
                            android:layout_margin="@dimen/_5sdp">

                            <Spinner
                                android:id="@+id/treat_type_spin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/_30sdp"

                                android:background="@drawable/edit_box"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_margin="@dimen/_5sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="@string/total_cured_pat"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="center"/>
                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/_30sdp"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black_transparent_80"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/edit_box"
                                android:id="@+id/et_cured"/>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_30sdp"
                    android:background="@drawable/green_button"
                    android:text="@string/submit"
                    android:id="@+id/btn_submit"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:background="@color/black_transparent_80"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlEnglish"
        android:layout_width="match_parent"
        android:background="@drawable/drawable_transparant_bg_primary_border"
        android:layout_height="@dimen/_90sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivEng"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/english"
            android:tint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tvEnglish"
            android:layout_below="@+id/ivEng"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            tools:text="English" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:id="@+id/ivEngSelect"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/nutral" />


    </RelativeLayout>
</LinearLayout>
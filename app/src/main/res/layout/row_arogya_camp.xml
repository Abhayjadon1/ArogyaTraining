<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/tableRow1"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="@string/date"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_village"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="@string/village"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="@string/total_patient"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent">

            <TextView
                android:id="@+id/tv_total_doctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/editbtn"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="1000"
                android:padding="@dimen/_5sdp" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:weightSum="2">
              <ImageView
                  android:id="@+id/editbtn"
                  android:layout_weight="1"
                  android:layout_width="@dimen/_20sdp"
                  android:layout_height="@dimen/_20sdp"
                  android:gravity="center"
                  android:padding="@dimen/_1sdp"
                  android:src="@drawable/ic_edit"
                  android:visibility="visible" />
              <ImageView
                  android:id="@+id/vieweye"
                  android:layout_width="@dimen/_20sdp"
                  android:layout_height="@dimen/_20sdp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:padding="@dimen/_1sdp"
                  android:src="@drawable/ic_visible"
                  android:visibility="visible" />
          </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
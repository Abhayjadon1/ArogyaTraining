<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/light_shape"
            android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:layout_weight="1.2"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:singleLine="true"
            android:text="18-07-2022"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tv_treatment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Rajni"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
<!--        <TextView-->
<!--            android:id="@+id/tv_total_patient"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"-->
<!--            android:gravity="center"-->
<!--            android:padding="@dimen/_5sdp"-->
<!--            android:singleLine="true"-->
<!--            android:text="@string/yes"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/_11sdp" />-->

       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1.3"
           android:weightSum="2"
           android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
           android:layout_height="match_parent"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_recovery"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:gravity="center"
               android:layout_weight="1.5"
               android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
               android:padding="@dimen/_5sdp"
               android:text="@string/cured"
               android:textColor="@color/white"
               android:textSize="@dimen/_11sdp" />
           <ImageView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="0.5"
               android:src="@drawable/ic_edit"
               android:padding="@dimen/_2sdp"
               android:visibility="gone"
               android:id="@+id/editbtn"/>
           <ImageView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="0.5"
               android:src="@drawable/ic_visible"
               android:padding="@dimen/_5sdp"
               android:id="@+id/vieweye"/>

       </LinearLayout>

    </TableRow>

</RelativeLayout>
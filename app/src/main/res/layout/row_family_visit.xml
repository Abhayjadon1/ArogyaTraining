<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_village_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_20sdp"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_treatment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text=""
            android:visibility="gone"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_total_patient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text=""
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:layout_weight="1.2">
<!--            <TextView-->
<!--                android:layout_weight="1"-->
<!--                android:id="@+id/tv_total_cured"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:gravity="center"-->
<!--                android:padding="@dimen/_5sdp"-->
<!--                android:singleLine="true"-->
<!--                android:text=""-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="@dimen/_11sdp" />-->
            <ImageView
                android:layout_weight="1"
                android:id="@+id/editbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_edit"
                />
            <ImageView
                android:layout_weight="1"
                android:id="@+id/vieweye"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_visible"
                android:padding="@dimen/_1sdp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
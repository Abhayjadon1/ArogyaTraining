<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48sdp">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_marginEnd="1sp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:singleLine="true"
            android:text="18/07/2022"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_marginEnd="1sp"/>

        <TextView
            android:id="@+id/tv_family_head"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Rajni"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_marginEnd="1sp"/>

<!--        <TextView-->
<!--            android:id="@+id/tv_hygiene_checkup"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:gravity="center"-->
<!--            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"-->
<!--            android:padding="@dimen/_5sdp"-->
<!--            android:visibility="gone"-->
<!--            android:text="Kacha/Pakka, Soakpit,Compost Pit, "-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/_11sdp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/light_shape"
                        android:backgroundTint="@color/black_transparent"
            android:layout_marginEnd="1sp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal"
                 android:weightSum="3">

               <LinearLayout
                   android:id="@+id/cbll"
                   android:visibility="visible"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:weightSum="2"
                       android:layout_weight="1">
                       <CheckBox
                           android:id="@+id/cbtoilets"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:enabled="false"/>
                       <CheckBox
                           android:id="@+id/cbSoakpit"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:enabled="false"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:weightSum="2"
                       android:layout_weight="1">
                       <CheckBox
                           android:id="@+id/cbCompost"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:enabled="false"/>
                       <CheckBox
                           android:id="@+id/cbwaterTreatment"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:enabled="false"/>
                   </LinearLayout>
               </LinearLayout>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="2"
                     android:visibility="gone"
                     android:text="@string/health_village_soakpit_water_treatment"
                     android:gravity="center"
                     android:id="@+id/cbTextTv"/>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical"
                     android:weightSum="2">
                     <ImageView
                         android:id="@+id/editbtn"
                         android:layout_width="@dimen/_24sdp"
                         android:layout_weight="1"
                         android:padding="@dimen/_3sdp"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:src="@drawable/ic_edit"/>
                     <ImageView
                         android:id="@+id/viewbtn"
                         android:layout_width="@dimen/_24sdp"
                         android:layout_height="@dimen/_15sdp"
                         android:layout_weight="1"
                         android:layout_gravity="center"
                         android:src="@drawable/ic_visible"/>
                 </LinearLayout>

             </LinearLayout>
        </LinearLayout>
    </TableRow>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        android:id="@+id/cardRv"
        android:backgroundTint="@color/light_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginBottom="@dimen/_10sdp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_10sdp"
               android:orientation="horizontal"
               android:weightSum="3"
               android:gravity="center">
<!--               <TextView-->
<!--                   android:id="@+id/list_id"-->
<!--                   android:layout_width="0dp"-->
<!--                   android:layout_height="@dimen/_30sdp"-->
<!--                   android:layout_gravity="center"-->
<!--                   android:layout_weight="0.3"-->
<!--                   android:text="A"-->
<!--                   android:gravity="center"-->
<!--                   android:textStyle="bold"-->
<!--                   android:textColor="@color/white"-->
<!--                   android:background="@drawable/right_round"-->
<!--                   android:backgroundTint="@color/colorPrimaryDark"-->
<!--                   android:textSize="@dimen/_13sdp"-->
<!--                   />-->
               <View
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:layout_weight="0.1"/>
               <TextView
                   android:id="@+id/tvName"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="1.9"
                   android:text=""
                   android:textColor="@color/white"
                   android:textSize="@dimen/_13sdp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/et_grade"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_30sdp"
                   android:hint="A/B/C"
                   android:gravity="center"
                   android:maxLength="1"
                   android:textColor="@color/white"
                   android:textColorHint="@color/light_black"
                   android:inputType="text"
                   android:textAllCaps="true"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:background="@drawable/black_et_bg"
                   android:layout_weight="0.6"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="2"
               android:visibility="gone"
               android:layout_margin="@dimen/_10sdp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="1"
                   android:text="@string/night_stay"
                   android:textSize="@dimen/_13sdp"
                   android:textStyle="bold" />
               <RadioButton
                   android:id="@+id/radio_vidhyal_night_yes"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.5"
                   android:text="@string/yes"/>
               <RadioButton
                   android:id="@+id/radio_vidhyal_night_no"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.5"
                   android:text="@string/no"/>

           </LinearLayout>
       </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/DatePickerTheme.buttonBarPositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>
<!--    <style name="AlertDialog.AppCom>-->
<!--        -->
<!--    </style>-->

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="DatePickerTheme.buttonBarPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/light_black</item>
    </style>
    <style name="DatePickerDialog" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/red_light</item>
    </style>
    <style name="SwitchCompatStyle">
        <item name="colorControlActivated">@color/green</item>
        <item name="trackTint">@color/light_green</item>
    </style>

    <color name="light_green">#4CAF50</color>
